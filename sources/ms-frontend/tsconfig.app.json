{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  // added components.ts as instructed by https://bootstrap-vue-next.github.io/bootstrap-vue-next/docs/icons.html
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "components.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

    // Typed icons.
    "types": ["unplugin-icons/types/vue"],
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
